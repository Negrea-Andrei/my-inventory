extends layout

block content
  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', name='name' required value=(undefined===category ? '' : category.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li!= error.msg
